{
    "manifest_version": 2,
    "name": "Zoom",
    "version": "1.0",
    "description": "图片放大查看",
    "content_scripts": [{
        "matches": [
            "http://*.oschina.net/*",
            "https://*.oschina.net/*",
            "https://*.zhihu.com/*",
            "https://*.douban.com/*"
        ],
        "css": ["content.css"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": "zoom_in.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "zoom_in.png",
        "48": "zoom_in.png",
        "128": "zoom_in.png"
    },
    "permissions": [
        "activeTab"
    ]
}
